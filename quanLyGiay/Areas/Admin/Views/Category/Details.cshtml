@model quanLyGiay.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-uppercase text-danger">Chi tiết loại sản phẩm</strong>
                </div>

                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "Category")" class="btn btn-sm btn-success">
                        Quay về danh sách
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <dl class="dl-horizontal">
                <dt>
                    Tên loại giày
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    Ngày tạo loại sản phẩm này
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Create_At)
                </dd>

                <dt>
                    Ngày cập nhật loại giày gần nhất
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Updated_At)
                </dd>

                <dt>
                   Tình trạng
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Status)
                </dd>

            </dl>
        </div>

    </div>

}





