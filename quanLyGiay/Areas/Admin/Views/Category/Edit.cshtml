@model quanLyGiay.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Create_At)

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-uppercase text-danger">Cập nhật loại sản phẩm</strong>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "Category")" class="btn btn-sm btn-warning">
                        Quay lại danh sách
                    </a>
                    <input type="submit" value="Lưu" class="btn btn-success btn-sm" />
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-9">
                    <div class="form-group">
                        <label>Tên loại giày</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Trạng thái</label>
                        @Html.DropDownListFor(model => model.Status, new[] {
                                                new SelectListItem { Text ="Chưa lên kệ", Value= "2"},
                                                new SelectListItem{Text ="Lên kệ hàng", Value="1"}}, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>
        </div>

    </div>
}