@model IEnumerable<quanLyGiay.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Danh sách khách hàng</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Create","Order")" class="btn btn-sm btn-success">
                    Thêm
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center">#</th>
                    <th style="width:20px;" class="text-center">STT</th>
                    <th>Họ tên</th>
                    <th style="width:100px;" class="text-center">SĐT</th>
                    <th style="width:100px;" class="text-center">Email</th>
                    <th style="width: 300px;" class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td class="text-center">
                            <input name="CheckId" type="checkbox" />
                        </td>
                        <td class="text-center">@item.Id</td>
                        <td>@item.Name</td>
                        <td class="text-center">@item.Phone</td>
                        <td class="text-center">@item.Email</td>
                        <td class="text-center" style="display:flex; justify-content:space-evenly;">
                            <a href="@Url.Action("Edit", "Order", new { @id = item.Id})" class="btn btn-sm btn-info">
                                Sửa
                            </a>
                            <a href="@Url.Action("Details", "Order", new { @id = item.Id})" class="btn btn-sm btn-warning">
                                Chi tiết
                            </a>
                            <a href="@Url.Action("Delete", "Order", new { @id = item.Id})" class="btn btn-sm btn-danger">
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


