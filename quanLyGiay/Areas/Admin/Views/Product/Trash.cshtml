@model IEnumerable<quanLyGiay.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Thùng rác loại sản phẩm</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Index","Product")" class="btn btn-sm btn-success">
                    Quay về danh sách
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center">#</th>
                    <th>Id</th>
                    <th>Tên sản phẩm</th>
                    <th style="width:100px;" class="text-center">Hình</th>
                    <th style="width: 300px;" class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td class="text-center">
                            <input name="CheckId" type="checkbox" />
                        </td>
                        <td class="text-center">@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <img src="~/Public/img/@item.Img" class="img-fluid"/>
                        </td>
                        <td class="text-center" style="display:flex; justify-content:space-evenly;">
                            <a href="@Url.Action("ReTrash", "Product", new { @id = item.Id})" class="btn btn-sm btn-info">
                                Thêm lại danh sách
                            </a>
                            <a href="@Url.Action("Delete", "Product", new { @id = item.Id})" class="btn btn-sm btn-warning">
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

