@model IEnumerable<quanLyGiay.Models.ProductCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Danh sách sản phẩm</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Create","Product")" class="btn btn-sm btn-success">
                    Thêm
                </a>
                <a href="@Url.Action("Trash","Product")" class="btn btn-sm btn-danger">
                    Thùng rác
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center">#</th>
                    <th style="width:100px;" class="text-center">Mã sản phẩm</th>
                    <th style="width:100px;" class="text-center" >Hình sản phẩm</th>
                    <th>Tên sản phẩm</th>
                    <th>Loại sản phẩm</th>
                    <th style="width: 300px;" class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                            <td class="text-center">
                                <input name="CheckId" type="checkbox" />
                            </td>
                            <td class="text-center">@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <img src="~/Public/img/@item.Img" class="img-fluid" />
                            </td>
                            <td>@item.CatName</td>
                            <td class="text-center" style="display:flex; justify-content:space-evenly;">
                                @if (item.Status == 1)
                                {
                                    <a href="@Url.Action("Status", "Product", new { @id = item.Id})" class="btn btn-sm btn-success">
                                        On
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Status", "Product", new { @id = item.Id})" class="btn btn-sm btn-danger">
                                        Off
                                    </a>
                                }
                                <a href="@Url.Action("Edit", "Product", new { @id = item.Id})" class="btn btn-sm btn-info">
                                    Sửa
                                </a>
                                <a href="@Url.Action("Details", "Product", new { @id = item.Id})" class="btn btn-sm btn-warning">
                                    Chi tiết
                                </a>
                                <a href="@Url.Action("DelTrash", "Product", new { @id = item.Id})" class="btn btn-sm btn-danger">
                                    Xóa
                                </a>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

